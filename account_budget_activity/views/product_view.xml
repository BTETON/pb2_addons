<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_category_property_form" model="ir.ui.view">
            <field name="name">product.category.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="account.view_category_property_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='account_property']/field[@name='property_account_income_categ']" position="after">
                        <field name="income_activity_group_id" />
                    </xpath>
                    <xpath expr="//group[@name='account_property']/field[@name='property_account_expense_categ']" position="after">
                        <field name="expense_activity_group_id" />
                    </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>

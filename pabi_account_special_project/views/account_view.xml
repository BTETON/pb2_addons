<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        # Mapping table
        <record id="view_account_special_project_gl_map_search" model="ir.ui.view">
            <field name="name">view.account.special.project.gl.map.search</field>
            <field name="model">pabi.data.map</field>
            <field name="arch" type="xml">
                <search string="Special Project GL">
                    <field name="in_value"/>
                    <field name="out_value"/>
                </search>
            </field>
        </record>

        <record id="view_account_special_project_gl_map_tree" model="ir.ui.view">
            <field name="name">view.account.special.project.gl.map.tree</field>
            <field name="model">pabi.data.map</field>
            <field name="arch" type="xml">
                <tree string="Special Project GL Maping" editable="top">
                    <field name="type" invisible="1"/>
                    <field name="model_id" invisible="1"/>
                    <field name="field_id" invisible="1"/>
                    <field name="in_value" string="NSTDA GL"/>
                    <field name="out_value" string="Special Project GL"/>
                </tree>
            </field>
        </record>

        <record id="action_account_special_project_gl_map" model="ir.actions.act_window">
            <field name="name">Special Project GL Map</field>
            <field name="res_model">pabi.data.map</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_account_special_project_gl_map_search"/>
            <field name="view_id" ref="view_account_special_project_gl_map_tree"/>
            <field name="domain" eval="[('type', '=', 'special_project'),
                                        ('model_id', '=', ref('account.model_account_account')),
                                        ('field_id', '=', ref('account.field_account_account_code'))]"/>
            <field name="context" eval="{'default_type': 'special_project',
                                         'default_model_id': ref('account.model_account_account'),
                                         'default_field_id': ref('account.field_account_account_code')}"/>
        </record>

        <menuitem action="action_account_special_project_gl_map" sequence="100" id="menu_account_special_project_gl_map" parent="account.account_account_menu" groups="account.group_account_manager"/>

        # Account
        <record id="view_account_form" model="ir.ui.view">
            <field name="name">view.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="balance" position="after">
                    <field name="sp_account_code"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

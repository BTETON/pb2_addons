<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_move_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock_asset.view_move_tree_inherit"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="generate_asset" position="after">
                    <field name="parent_asset_id"/>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_move_picking_form" >
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock_asset.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='generate_asset']" position="after">
                    <field name="parent_asset_id" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>

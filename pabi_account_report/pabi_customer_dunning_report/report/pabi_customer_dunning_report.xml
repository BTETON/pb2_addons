<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>

		<record model="ir.ui.view" id="view_pabi_customer_dunning_report_tree">
			<field name="name">view.pabi.customer.dunning.report.tree</field>
			<field name="model">pabi.customer.dunning.report</field>
			<field name="arch" type="xml">
				<tree string="Customer Dunning Report">
					<field name="org_id"/>
					<field name="partner_id"/>
					<field name="date_run"/>
					<field name="move_line_id"/>
					<field name="invoice_id" invisible="1"/>
					<field name="reconcile_id" invisible="1"/>
					<field name="amount_residual"/>
					<field name="date_maturity"/>
					<field name="days_overdue"/>
				</tree>
			</field>
		</record>

		<record id="view_pabi_customer_dunning_report_search" model="ir.ui.view">
			<field name="name">view.pabi.customer.dunning.report.search</field>
			<field name="model">pabi.customer.dunning.report</field>
			<field name="arch" type="xml">
				<search string="Customer Dunning Report">
					<group expand="1" string="Group By">
						<filter string="Org" name="groupby_org" context="{'group_by':'org_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="action_pabi_customer_dunning_report" model="ir.actions.act_window">
			<field name="name">Customer Dunning Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pabi.customer.dunning.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</openerp>

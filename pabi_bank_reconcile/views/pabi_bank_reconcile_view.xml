<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_pabi_bank_reconcile_form" model="ir.ui.view">
            <field name="name">view.pabi.bank.reconcile.form</field>
            <field name="model">pabi.bank.reconcile</field>
            <field name="arch" type="xml">
                <form string="Bank Reconcile" class="oe_form_configuration">
                    <div class="oe_title">
                        <h1>
                            <label string="Reconcile Report"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type"/>
                            <field name="journal_id"/>
                            <field name="transfer_type"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <field name="line_ids">
                        <tree>
                            <field name="voucher_id"/>
                            <field name="cheque_number"/>
                            <field name="amount"/>
                            <field name="bank_cheque_number"/>
                            <field name="bank_amount"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="view_pabi_bank_reconcile_tree" model="ir.ui.view">
            <field name="name">view.pabi.bank.reconcile.tree</field>
            <field name="model">pabi.bank.reconcile</field>
            <field name="arch" type="xml">
                <tree string="Bank Reconcile">
                    <field name="name"/>
                    <field name="payment_type"/>
                    <field name="journal_id"/>
                    <field name="transfer_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>

        <record id="action_pabi_bank_reconcile" model="ir.actions.act_window">
            <field name="name">Bank Reconcile</field>
            <field name="res_model">pabi.bank.reconcile</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_pabi_bank_reconcile_tree"/>
        </record>

        <menuitem action="action_pabi_bank_reconcile" id="menu_pabi_bank_reconcile" sequence="111" name="Bank Reconcile" parent="account.menu_finance_reports"/>
    </data>
</openerp>

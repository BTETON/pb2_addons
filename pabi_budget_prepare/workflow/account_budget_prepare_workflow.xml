<?xml version="1.0" ?>
<openerp>
<data>

    <!-- Workflow definition -->

    <record model="workflow" id="wkf_account_budget_prepare">
        <field name="name">wkf.account.budget.prepare</field>
        <field name="osv">account.budget.prepare</field>
        <field name="on_create">True</field>
    </record>

    <record model="workflow.activity" id="act_plan">
        <field name="wkf_id" ref="wkf_account_budget_prepare" />
        <field name="flow_start">True</field>
        <field name="name">plan</field>
        <field name="action">write({'state':'plan'})</field>
        <field name="kind">function</field>
    </record>

    <record model="workflow.activity" id="act_policy">
        <field name="wkf_id" ref="wkf_account_budget_prepare" />
        <field name="name">policy</field>
        <field name="kind">function</field>
        <field name="action">budget_policy()</field>
        <field name="split_mode">OR</field>
    </record>

    <record model="workflow.activity" id="act_release">
        <field name="wkf_id" ref="wkf_account_budget_prepare" />
        <field name="name">release</field>
        <field name="kind">function</field>
        <field name="action">budget_release()</field>
    </record>

    <record model="workflow.activity" id="act_cancel">
        <field name="wkf_id" ref="wkf_account_budget_prepare" />
        <field name="name">cancel</field>
        <field name="kind">function</field>
        <field name="action">budget_cancel()</field>
    </record>

    <record model="workflow.activity" id="act_publish">
        <field name="wkf_id" ref="wkf_account_budget_prepare" />
        <field name="name">publish</field>
        <field name="flow_stop">True</field>
        <field name="kind">stopall</field>
        <field name="action">budget_publish()</field>
        <field name="join_mode">XOR</field>

    </record>

    <record model="workflow.transition" id="t1">
        <field name="act_from" ref="act_plan" />
        <field name="act_to" ref="act_policy" />
        <field name="signal">policy</field>
    </record>

    <record model="workflow.transition" id="t2">
        <field name="act_from" ref="act_policy" />
        <field name="act_to" ref="act_release" />
        <field name="signal">release</field>
    </record>

    <record model="workflow.transition" id="t3">
        <field name="act_from" ref="act_policy" />
        <field name="act_to" ref="act_cancel" />
        <field name="signal">cancel</field>
    </record>

    <record model="workflow.transition" id="t4">
        <field name="act_from" ref="act_release" />
        <field name="act_to" ref="act_cancel" />
        <field name="signal">cancel</field>
    </record>

    <record model="workflow.transition" id="t5">
        <field name="act_from" ref="act_release" />
        <field name="act_to" ref="act_publish" />
        <field name="signal">publish</field>
    </record>

    <record model="workflow.transition" id="t6">
        <field name="act_from" ref="act_cancel" />
        <field name="act_to" ref="act_plan" />
        <field name="signal">plan</field>
    </record>

</data>
</openerp>

<?xml version="1.0"?>
<openerp>
	<data>

		# PDF

		<record id="report_vat_pdf" model="ir.actions.report.xml">
			<field name="auto">True</field>
			<field name="model">account.vat.report</field>
			<field name="name">vat report</field>
			<field name="report_name">vat_report_pdf</field>
			<field name="report_rml">pabi_th_vat_jasper_report/vat_report.jrxml</field>
			<field name="menu">True</field>
			<field name="header">False</field>
			<field name="jasper_report">True</field>
			<field name="jasper_output">pdf</field>
			<field name="copies">1</field>
		</record>

		<record id="report_sample_partner_orm" model="ir.values">
			<field name="name">Partner List</field>
			<field name="model">account.vat.report</field>
			<field name="key2" eval="'client_print_multi'"/>
			<field name="value_unpickle" eval="'ir.actions.report.xml, ' +str(report_vat_pdf)"/>
		</record>

		# XLS (change jasper output format and report name)
        <record id="report_vat_xls" model="ir.actions.report.xml">
            <!-- XLS -->
            <field name="auto">True</field>
            <field name="model">account.vat.report</field>
            <field name="name">vat report</field>
            <field name="report_name">vat_report_xls</field>
            <!-- XLS -->
            <field name="report_rml">pabi_th_vat_jasper_report/vat_report.jrxml</field>
            <field name="menu">True</field>
            <field name="header">False</field>
            <field name="jasper_report">True</field>
            <field name="jasper_output">xls</field>
            <!-- XLS -->
            <field name="copies">1</field>
        </record>

        <record id="report_sample_partner_orm_xls" model="ir.values">
            <!-- XLS -->
            <field name="name">Partner List</field>
            <field name="model">account.vat.report</field>
            <field name="key2" eval="'client_print_multi'"/>
            <field name="value_unpickle" eval="'ir.actions.report.xml, ' +str(report_vat_xls)"/>
        </record>
        
	</data>
</openerp>

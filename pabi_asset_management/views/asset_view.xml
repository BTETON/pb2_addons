<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Account Asset View -->
        <record id="view_account_asset_search" model="ir.ui.view">
            <field name="name">account.asset.asset.search</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset_management.view_account_asset_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="product_id"/>
                    <field name="picking_id"/>
                </field>
            </field>
        </record>

        <record id="view_account_asset_asset_tree" model="ir.ui.view">
            <field name="name">account.asset.asset.tree</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset_management.view_account_asset_asset_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code"/>
                </field>
                <field name="state" position="after">
                    <field name="product_id"/>
                    <field name="picking_id"/>
                </field>
            </field>
        </record>

        <record id="view_account_asset_asset_form" model="ir.ui.view">
            <field name="name">account.asset.asset.form</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset_management.view_account_asset_asset_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/field[@name='code']" position="replace" />
                <xpath expr="//form/sheet/div/h1" position="after" >
                    <label for="code" class="oe_edit_only"/>
                    <h2>
                        <field name="code" class="oe_inline"/>
                    </h2>
                </xpath>
                <field name="parent_id" position="after">
                    <field name="product_id"/>
                    <field name="picking_id"/>
                </field>
                <notebook colspan="4" position="inside">
                    <page string="Owner">
                        <group>
                            <group>
                                <field name="owner_id"/>
                                <field name="section_id"/>
                                <field name="org_id"/>
                                <field name="location_id"/>
                                <field name="room"/>
                            </group>
                            <group/>
                        </group>
                    </page>
                </notebook>
                <notebook colspan="4">
                    <page string="Product Information">
                        <group>
                            <group>
                                <field name="serial_number"/>
                                <field name="warranty"/>
                                <field name="warranty_start_date"/>
                                <field name="warranty_expire_date"/>
                            </group>
                            <group/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Asset Category -->
        <record id="view_account_asset_category_form" model="ir.ui.view">
            <field name="name">view.account.asset.category.form</field>
            <field name="model">account.asset.category</field>
            <field name="inherit_id" ref="account_asset_management.view_account_asset_category_form"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_categ_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

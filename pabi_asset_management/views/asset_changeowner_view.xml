<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- Asset -->
        <record model="ir.ui.view" id="view_account_asset_asset_tree_changeowner">
            <field name="name">account.asset.asset.tree.changeowner</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <tree string="Assets">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_id"/>
                    <field name="category_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_search_changeowner" model="ir.ui.view">
            <field name="name">account.asset.asset.search.changeowner</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <search string="Assets">
                    <filter string="Normal Asset" name="normal_asset" domain="[('type', '!=', 'view'), ('no_depreciation', '=', False)]"/>
                    <separator/>
                    <field name="name" string="Asset" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="category_id"/>
                    <field name="product_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Asset Changeowner -->
        <record model="ir.ui.view" id="view_account_asset_changeowner_form">
            <field name="name">account.asset.changeowner.form</field>
            <field name="model">account.asset.changeowner</field>
            <field name="arch" type="xml">
                <form string="Asset">
                    <header>
                        <button name="action_draft" states="cancel" string="Set to Draft" type="object"/>
                        <button name="action_done" states="draft" string="Change Owner" type="object" groups="account.group_account_manager" class="oe_highlight"/>
                        <button name="action_cancel" states="draft" string="Cancel" type="object" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box oe_right"></div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Change Owner for Depreciation">
                                <field name="responsible_user_id"/>
                                <field name="section_id" attrs="{'required': [('project_id', '=', False)]}"/>
                                <field name="project_id" attrs="{'required': [('section_id', '=', False)]}"/>
                                <field name="costcenter_id"/>
                            </group>
                            <group string="Reference">
                                <field name="user_id"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Source Assets">
                                <field
                                    name="asset_ids"
                                    context="{'tree_view_ref': 'pabi_asset_management.view_account_asset_asset_tree_changeowner',
                                              'search_view_ref': 'pabi_asset_management.view_account_asset_search_changeowner',
                                              'search_default_normal_asset': 1}">
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="code" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="category_id" readonly="1"/>
                                        <field name="purchase_id" readonly="1"/>
                                        <field name="owner_section_id" string="Owner Section" readonly="1"/>
                                        <field name="owner_project_id" string="Owner Project" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="note" placeholder="Add an internal note here..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_asset_changeowner_tree">
            <field name="name">account.asset.changeowner.tree</field>
            <field name="model">account.asset.changeowner</field>
            <field name="arch" type="xml">
                <tree string="Asset Change Owner">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="section_id"/>
                    <field name="project_id"/>
                    <field name="costcenter_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_changeowner_search" model="ir.ui.view">
            <field name="name">account.asset.changeowner.search</field>
            <field name="model">account.asset.changeowner</field>
            <field name="arch" type="xml">
                <search string="Asset Change Owner">
                    <field name="name" string="Asset Change Owner"/>
                    <field name="section_id"/>
                    <field name="project_id"/>
                    <field name="costcenter_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Section" domain="" context="{'group_by':'section_id'}"/>
                        <filter string="Project" domain="" context="{'group_by':'project_id'}"/>
                        <filter string="Costcenter" domain="" context="{'group_by':'costcenter_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_asset_changeowner_form">
            <field name="name">Change Owner</field>
            <field name="res_model">account.asset.changeowner</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_account_asset_changeowner_tree"/>
            <field name="search_view_id" ref="view_account_asset_changeowner_search"/>
            <field name="context">{}</field>
        </record>

        <menuitem parent="menu_asset_actions" id="menu_action_account_asset_changeowner_form" action="action_account_asset_changeowner_form"/>

    </data>
</openerp>

<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- Asset -->
        <record model="ir.ui.view" id="view_account_asset_asset_tree3">
            <field name="name">account.asset.asset.tree3</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <tree string="Assets">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_id"/>
                    <field name="category_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_search3" model="ir.ui.view">
            <field name="name">account.asset.asset.search3</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <search string="Assets">
                    <field name="name" string="Asset" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="category_id"/>
                    <field name="product_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Asset Issue -->
        <record model="ir.ui.view" id="view_account_asset_issue_form">
            <field name="name">account.asset.issue.form</field>
            <field name="model">account.asset.issue</field>
            <field name="arch" type="xml">
                <form string="Asset">
                    <header>
                        <button name="action_draft" states="cancel" string="Set to Draft" type="object"/>
                        <button name="action_done" states="draft" string=" Asset" type="object" groups="account.group_account_manager" class="oe_highlight"/>
                        <button name="action_cancel" states="draft,done" string="Cancel" type="object" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box oe_right"></div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                              <field name="receive_user_id"/>
                            </group>
                            <group>
                              <field name="user_id"/>
                              <field name="date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Source Assets">
                                <field
                                    name="issue_asset_ids"
                                    context="{'tree_view_ref': 'pabi_asset_management.view_account_asset_asset_tree3',
                                              'search_view_ref': 'pabi_asset_management.view_account_asset_search3'}">
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="code" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="category_id" readonly="1"/>
                                        <field name="purchase_id" readonly="1"/>
                                        <field name="project_id" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_asset_issue_tree">
            <field name="name">account.asset.issue.tree</field>
            <field name="model">account.asset.issue</field>
            <field name="arch" type="xml">
                <tree string="Asset Issue">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="receive_user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_issue_search" model="ir.ui.view">
            <field name="name">account.asset.issue.search</field>
            <field name="model">account.asset.issue</field>
            <field name="arch" type="xml">
                <search string="Issue Asset">
                    <field name="name" string="Asset Issue"/>
                    <field name="user_id"/>
                    <field name="receive_user_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Received By" domain="" context="{'group_by':'receive_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_asset_issue_form">
            <field name="name">Issue Asset</field>
            <field name="res_model">account.asset.issue</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_account_asset_issue_tree"/>
            <field name="search_view_id" ref="view_account_asset_issue_search"/>
        </record>

        <menuitem parent="account_asset_management.menu_finance_assets" id="menu_action_account_asset_issue_form" action="action_account_asset_issue_form"/>

    </data>
</openerp>

<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- Asset -->
        <record model="ir.ui.view" id="view_account_asset_asset_tree2">
            <field name="name">account.asset.asset.tree2</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <tree string="Assets">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_id"/>
                    <field name="category_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_search2" model="ir.ui.view">
            <field name="name">account.asset.asset.search2</field>
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <search string="Assets">
                    <filter string="Asset w/o Depre." name="no_depre_asset" domain="[('type', '!=', 'view'), ('no_depreciation', '=', True)]"/>
                    <filter string="Normal Asset" name="normal_asset" domain="[('type', '!=', 'view'), ('no_depreciation', '=', False)]"/>
                    <separator/>
                    <field name="name" string="Asset" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="category_id"/>
                    <field name="product_id"/>
                    <field name="purchase_id"/>
                    <field name="project_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Asset Transfer -->
        <record model="ir.ui.view" id="view_account_asset_transfer_form">
            <field name="name">account.asset.transfer.form</field>
            <field name="model">account.asset.transfer</field>
            <field name="arch" type="xml">
                <form string="Asset">
                    <header>
                        <button name="action_draft" states="cancel" string="Set to Draft" type="object"/>
                        <button name="action_transfer" states="draft" string="Transfer Asset" type="object" groups="account.group_account_manager" class="oe_highlight"/>
                        <button name="action_cancel" states="draft" string="Cancel" type="object" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,transfer"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box oe_right">
                            <button name="open_asset" string="New Asset" type="object" class="oe_inline"/>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="transfer_type"/>
                            </group>
                            <group>
                                <div name="type_new_asset" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')]}">
                                    Create a new asset and deactivate the old asset(s).
                                </div>
                                <div name="type_change_ownert" attrs="{'invisible': [('transfer_type', '!=', 'change_owner')]}">
                                    Changing owner of the select asset(s).
                                </div>
                            </group>
                        </group>
                        <group>
                            <group>
                                <!-- New Asset -->
                                <separator string="New Asset" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')]}" colspan="2"/>
                                <field name="product_id" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')], 'required': [('transfer_type', '=', 'new_asset')]}"/>
                                <field name="asset_name" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')], 'required': [('transfer_type', '=', 'new_asset')]}"/>
                                <field name="asset_category_id" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')]}"/>
                                <field name="ref_asset_id" attrs="{'invisible': [('transfer_type', '!=', 'new_asset')]}"/>
                                <!-- Change Owner -->
                                <separator string="Change Owner" attrs="{'invisible': [('transfer_type', '!=', 'change_owner')]}" colspan="2"/>
                                <field name="section_id" attrs="{'invisible': [('transfer_type', '!=', 'change_owner')], 'required': [('transfer_type', '=', 'change_owner'), ('project_id', '=', False)]}"/>
                                <field name="project_id" attrs="{'invisible': [('transfer_type', '!=', 'change_owner')], 'required': [('transfer_type', '=', 'change_owner'), ('section_id', '=', False)]}"/>
                                <field name="costcenter_id" attrs="{'invisible': [('transfer_type', '!=', 'change_owner')]}"/>
                            </group>
                            <group>
                                <separator string="Reference" colspan="2"/>
                                <field name="user_id"/>
                                <field name="date"/>
                                <field name="search_no_depre_asset" invisible="1"/>
                                <field name="search_normal_asset" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Source Assets">
                                <field
                                    name="transfer_asset_ids"
                                    context="{'tree_view_ref': 'pabi_asset_management.view_account_asset_asset_tree2',
                                              'search_view_ref': 'pabi_asset_management.view_account_asset_search2',
                                              'search_default_no_depre_asset': search_no_depre_asset,
                                              'search_default_normal_asset': search_normal_asset}">
                                    <tree editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="code" readonly="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="category_id" readonly="1"/>
                                        <field name="purchase_id" readonly="1"/>
                                        <field name="project_id" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <field name="note" placeholder="Add an internal note here..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_asset_transfer_tree">
            <field name="name">account.asset.transfer.tree</field>
            <field name="model">account.asset.transfer</field>
            <field name="arch" type="xml">
                <tree string="Asset Transfer">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="ref_asset_id"/>
                    <field name="product_id"/>
                    <field name="asset_category_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_account_asset_transfer_search" model="ir.ui.view">
            <field name="name">account.asset.transfer.search</field>
            <field name="model">account.asset.transfer</field>
            <field name="arch" type="xml">
                <search string="Asset Transfer">
                    <field name="name" string="Asset Transfer"/>
                    <field name="product_id"/>
                    <field name="asset_category_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Category" domain="" context="{'group_by':'asset_category_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_asset_transfer_form">
            <field name="name">Asset Transfer</field>
            <field name="res_model">account.asset.transfer</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_account_asset_transfer_tree"/>
            <field name="search_view_id" ref="view_account_asset_transfer_search"/>
            <field name="context">{'active_test': False}</field>
        </record>

        <menuitem parent="account_asset_management.menu_finance_assets" id="menu_action_account_asset_transfer_form" action="action_account_asset_transfer_form"/>

    </data>
</openerp>

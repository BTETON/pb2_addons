<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_supplier_invoice_doc">
            <t t-call="pabi_forms.report_layout_header">
                <div class="page" style="font-size:12px;font-family: THSarabunPSK !important;">
                    <div class="row text-center mb16">
                         <h5><strong>AP VOUCHER</strong></h5>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <p>
                                <strong>Doc. Date : </strong><span t-esc="o.date_invoice"/><br/>
                                <strong>Currency : </strong><span t-esc="o.currency_id.name"/><br/>
                                <strong>Reference Doc : </strong><span t-esc="o.number"/><br/>
                                <strong>Doc.HeaderText : </strong><span>10000021</span>
                            </p>
                        </div>
                        <div class="col-xs-3">
                            <p>
                                <strong>Posting Date : </strong><span t-esc="o.move_id and o.move_id.date or ''"/><br/>
                                <strong>Rate : </strong><span>1.00000</span>
                            </p>
                        </div>
                        <div class="col-xs-5">
                            <strong>Doc. Type : </strong><strong style="font-size:25px;">KV</strong><br/>
                            <strong>Fiscal Year/Doc. No.: </strong><span t-esc="o.period_id.name"/>/<span t-esc="o.move_id and o.move_id.name or ''"/><br/>
                            <strong>Reversed Doc. No. : </strong>
                            <span t-esc="o.cancel_move_id and o.cancel_move_id.name or ''"/>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-4">
                            <strong>Tax Details</strong>
                            <table class="table table-condensed">
                                <thead>
                                    <tr style="border-top: 1px solid;">
                                        <th>Clearing Doc</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.tax_line" t-as="taxline">
                                        <td><span t-esc="taxline.name"/></td>
                                        <td><span t-esc="taxline.amount"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="col-xs-4">
                            <strong>Payment Details</strong>
                            <table class="table table-condensed">
                                <thead>
                                    <tr style="border-top: 1px solid;">
                                        <th>Clearing Doc</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.payment_ids" t-as="payment">
                                        <td><span t-esc="payment.name"/></td>
                                        <td><span t-esc="payment.debit"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <strong>Extra Details</strong>
                        <div class="col-xs-4">
                            <table class="table table-condensed">
                                <thead>
                                    <tr style="border-top: 1px solid;">
                                        <th>Clearing Doc</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row mt16" style="border-top:1px solid black;">
                        <div class="col-xs-3">
                            <strong>Text</strong>
                        </div>
                        <div class="col-xs-9">
                            <p><t t-esc="o.comment"/></p>
                        </div>
                    </div>
                    
                    <table class="table table-condensed mt64" style="font-size:11px;">
                        <thead>
                            <tr style="border-top: 1px solid;">
                                <th rowspan="2">Pst Key</th>
                                <th rowspan="2">Account</th>
                                <th rowspan="2">Name</th>
                                <th colspan="2" class="text-center" >Amount(THB)</th>
                                <th rowspan="2">W/T Cd.</th>
                                <th rowspan="2">BA</th>
                                <th rowspan="2">PrCtr/CCtr</th>
                                <th rowspan="2">Int. Order</th>
                                <th rowspan="2">WBS</th>
                            </tr>
                            <tr style="border-top:hidden;">
                                <th>Dr.</th>
                                <th>Cr.</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-if="o.move_id">
                                <t t-foreach="o.move_id.line_id" t-as="move_line">
                                    <tr>
                                        <td><span>31</span></td>
                                        <td><span t-esc="move_line.account_id.code"/></td>
                                        <td><span t-esc="move_line.account_id.name"/></td>
                                        <td><span t-esc="move_line.debit"/></td>
                                        <td><span t-esc="move_line.credit"/></td>
                                        <td>
                                            <span></span>
                                        </td>
                                        <td></td>
                                        <td><span t-esc="move_line.section_id and move_line.section_id.code or move_line.project_id and move_line.project_id.code or ''"></span></td>
                                        <td><span></span></td>
                                        <td><span></span></td>
                                    </tr>
                                </t>
                            </t>
                            
                        </tbody>
                        <tr style="border-bottom: 1px solid black;">
                            <td colspan="2"></td>
                            <td style="padding-top:150px;"><strong>Total</strong></td>
                            <td style="padding-top:150px;"><strong t-esc="o.amount_total"/></td>
                            <td style="padding-top:150px;"><strong t-esc="o.amount_total"/></td>
                            <td colspan="5"></td>
                        </tr>
                    </table>
                    
                    <div class="row">
                        <div class="col-xs-4">
                            <p>
                                <strong>Accounted by</strong>_________________
                            </p>
                        </div>
                        <div class="col-xs-4">
                            <p>
                                <strong>Accounting Reviewed by</strong>_______
                            </p>
                        </div>
                        <div class="col-xs-4">
                            <p>
                                <strong>Approved by</strong>___________________
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        
    <template id="account_supplier_invoices_lang">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'pabi_forms.report_supplier_invoice_doc')"/>
            </t>
        </t>
    </template>
    </data>
</openerp>
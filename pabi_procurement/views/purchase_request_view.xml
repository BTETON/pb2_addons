<?xml version="1.0"?>
<openerp>
    <data>
    <record model="ir.ui.view" id="view_purchase_request_mock_form">
        <field name="name">purchase.request.mock.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='assigned_to']" position="after">
                    <field name="responsible_man"/>
                    <field name="date_approved"/>
                    <field name="original_durable_articles"/>
                    <field name="total_budget_value"/>
                    <field name="warehouse_id"/>
                    <field name="procure_type"/>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='description']" position="after">
                    <field name="objective"/>
                    <field name="procure_method"/>
                    <field name="currency_id"/>
                    <field name="currency_rate"/>
                    <field name="delivery_address"/>
                </xpath>
                <xpath expr="//button[@name='button_rejected']" position="attributes">
                    <attribute name="states">to_approve</attribute>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">
                        draft, approved, cancel
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_approved']" position="attributes">
                    <attribute name="string">Accept</attribute>
                </xpath>
                <xpath expr="//button[@name='button_rejected']" position="attributes">
                    <attribute name="string">Cancel</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='analytic_account_id']" position="after">
                    <field name="product_price"
                           class="oe_inline"
                           attrs="{'readonly': [('is_editable','=', False)]}"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='mission_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='spa_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='program_base_type_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='program_type_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='program_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='org_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='division_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='department_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='analytic_account_id']" position="after">
                    <field name="product_price" />
                    <field name="project_id" />
                    <field name="costcenter_id" />
                </xpath>
                <xpath expr="//form/sheet/notebook/page" position="after">
                    <page string="Committee">
                        <field name="committee_ids">
                            <tree>
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="position"/>
                                <field name="responsible"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Attachment">
                        <field name="attachment_ids">
                            <tree>
                                <field name="name"/>
                                <field name="file_url"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
    </record>
    </data>
</openerp>

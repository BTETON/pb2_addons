<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_move_picking_tree" >
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_uom_qty']" position="after">
                    <field name="request_qty" />
                </xpath>
                <xpath expr="//tree/field[@name='location_dest_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='string_availability_info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_move_picking_form" >
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group/label[@for='product_uos_qty']" position="before">
                    <label for="request_qty"/>
                        <div>
                            <field name="request_qty" />
                        </div>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_picking_form" >
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Additional Info']" position="attributes">
                    <attribute name="attrs">{'invisible': [('picking_type_code', '=', 'internal')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="confirmed_by" />
                    <field name="approved_by" />
                    <field name="verified" invisible="1"/>
                </xpath>
                <xpath expr="//div[@class='oe_right oe_button_box']" position="before">
                    <div class="oe_right">
                        <h2 attrs="{'invisible': ['|',('picking_type_code', '!=', 'internal'),'|',('state', '!=', 'assigned'), ('verified', '=', True)]}">Verifying</h2>
                        <h2 attrs="{'invisible': ['|',('picking_type_code', '!=', 'internal'),'|',('state', '!=', 'assigned'), ('verified', '=', False)]}">Verified</h2>
                    </div>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="action_verify" string="Verify" type="object" attrs="{'invisible': ['|',('state', '!=', 'assigned'), ('verified', '=', True)]}" class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" attrs="{'invisible': ['|',('state', '!=', 'assigned'), ('verified', '=', True)]}"/>
                </xpath>
                <xpath expr="//button[@name='do_enter_transfer_details']" position="replace">
                    <button name="do_enter_transfer_details" attrs="{'invisible': ['|', ('state', 'in', ('draft', 'confirmed','done','cancel')), ('verified', '=', False)]}" string="Transfer" groups="stock.group_stock_user" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//button[@name='do_print_picking']" position="replace">
                    <button name="do_print_picking" string="Print Picking List" groups="stock.group_stock_user" type="object" attrs="{'invisible': ['|', '|', ('picking_type_code', '=', 'outgoing'), ('state', '!=', 'assigned'), ('verified', '=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" attrs="{'invisible': ['|', ('state', 'in', ('done','cancel')), ('verified', '=', False)]}" string="Cancel Transfer" groups="base.group_user" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="purchase_order_form" >
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="date_reference" />
                </xpath>
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="mycontract_id" />
                    <field name="date_contract_start" />
                    <field name="date_contract_end" />
                </xpath>
                <xpath expr="//div[@class='oe_clear']" position="before">
                    <group>
                        <field name="fine_rate" />
                        <field name="total_fine"/>
                        <field name="receive_date_condition"/>
                        <field name="picking_receive_date" nolabel="1"
                        	attrs="{'invisible':[('receive_date_condition', '!=', 'date')]}"/>
                    </group>
                </xpath>
                <xpath expr="//form/sheet/notebook/page" position="after">
                    <page string="Committee">
                        <field name="committee_tor_ids">
                            <h2>Draft TOR</h2>
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="position"/>
                                <field name="responsible"/>
                                <field name="committee_type"/>
                            </tree>
                        </field>
                        <field name="committee_tender_ids">
                            <h2>Tender</h2>
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="position"/>
                                <field name="responsible"/>
                                <field name="committee_type"/>
                            </tree>
                        </field>
                       <field name="committee_receipt_ids">
                            <h2>Receipt</h2>
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="position"/>
                                <field name="responsible"/>
                                <field name="committee_type"/>
                            </tree>
                        </field>
                       <field name="committee_std_price_ids">
                            <h2>Std. Price</h2>
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="position"/>
                                <field name="responsible"/>
                                <field name="committee_type"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='shipped']" position="after">
                    <field name="create_by"/>
                    <field name="verified_by"/>
                    <field name="approved_by"/>
                    <field name="position"/>
                    <field name="date_approval"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

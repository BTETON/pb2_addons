<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="invoice_supplier_form" model="ir.ui.view" >
            <field name="name">invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="pabi_chartfield.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Payments']" position="after">
                    <page string="Billing">
                        <button name="create_bill_no" attrs="{'invisible':[('bill_number','!=',False)]}" string="Create Billing No." type="object"/>
                        <group col="4">
                            <group>
                                <field name="bill_number" readonly="1"/>
                                <field name="date_bill"/>
                                <field name="bill_uid"/>
                                <field name="bill_note"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

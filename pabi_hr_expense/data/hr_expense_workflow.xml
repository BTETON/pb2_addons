<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- Adding Wait Accept activity between Draft and Confirm -->

        <record id="act_wait_accept" model="workflow.activity">
            <field name="wkf_id" ref="hr_expense.wkf_expenses"/>
            <field name="name">wait_accept</field>
            <field name="kind">function</field>
            <field name="action">expense_wait_accept()</field>
        </record>        

        <record id="t0" model="workflow.transition">
            <field name="act_from" ref="hr_expense.act_draft"/>
            <field name="act_to" ref="act_wait_accept"/>
            <field name="signal">to_wait_accept</field>
        </record>

        <record id="hr_expense.t1" model="workflow.transition">
            <field name="act_from" ref="act_wait_accept"/>
            <field name="act_to" ref="hr_expense.act_confirm"/>
            <field name="signal">confirm</field>
        </record>

        <record id="t20" model="workflow.transition">
            <field name="act_from" ref="act_wait_accept"/>
            <field name="act_to" ref="hr_expense.act_refused"/>
            <field name="signal">refuse</field>
            <field name="group_id" ref="base.group_hr_user"/>
        </record>

    </data>
</openerp>

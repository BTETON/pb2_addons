<openerp>
    <data>

        <record id="wizard_cost_control_breakdown" model="ir.ui.view">
            <field name="name">wizard.cost.control.breakdown</field>
            <field name="model">cost.control.breakdown</field>
            <field name="arch" type="xml">
                <form string="Cost Control Breakdown">
                    <p class="oe_grey">Detail activities of this cost control</p>
                    <field name="breakdown_line_ids">
                        <tree editable="bottom">
                            <field name="activity_group_id"/>
                            <field name="activity_id"/>
                            <field name="name"/>
                            <field name="m1"/>
                            <field name="m2"/>
                            <field name="m3"/>
                            <field name="m4"/>
                            <field name="m5"/>
                            <field name="m6"/>
                            <field name="m7"/>
                            <field name="m8"/>
                            <field name="m9"/>
                            <field name="m10"/>
                            <field name="m11"/>
                            <field name="m12"/>
                            <field name="planned_amount" sum="Planned Amount"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="submit_cost_control_breakdown" type="object" string="Submit" class="oe_highlight"/>
                        or
                        <button special="cancel" class="oe_link" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_add_cost_control_breakdown" model="ir.actions.act_window">
            <field name="name">Cost Control Breakdown</field>
            <field name="res_model">cost.control.breakdown</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

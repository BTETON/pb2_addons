<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="pabi_purchase_request_form" model="ir.ui.view" >
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='analytic_account_id']" position="after">
                    <field name="mission_id" invisible="0"/>
                    <field name="spa_id" invisible="0"/>
                    <field name="program_base_type_id" invisible="0"/>
                    <field name="program_type_id" invisible="0"/>
                    <field name="program_id" invisible="0"/>
                    <field name="org_id" invisible="0"/>
                    <field name="project_id" />
                    <field name="division_id" invisible="0"/>
                    <field name="department_id" invisible="0"/>
                    <field name="costcenter_id" />
                </xpath>
            </field>
        </record>
        <record id="pabi_purchase_request_line_form" model="ir.ui.view" >
            <field name="name">purchase.request.line.form</field>
            <field name="model">purchase.request.line</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='analytic_account_id']" position="after">
                    <field name="mission_id" invisible="0"/>
                    <field name="spa_id" invisible="0"/>
                    <field name="program_base_type_id" invisible="0"/>
                    <field name="program_type_id" invisible="0"/>
                    <field name="program_id" invisible="0"/>
                    <field name="org_id" invisible="0"/>
                    <field name="project_id" />
                    <field name="division_id" invisible="0"/>
                    <field name="department_id" invisible="0"/>
                    <field name="costcenter_id" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>

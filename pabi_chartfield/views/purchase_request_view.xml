<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="pabi_purchase_request_form" model="ir.ui.view" >
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='analytic_account_id']" position="after">
                    
                	<field name="spa_id" invisible="1"/>
                	<field name="mission_id" invisible="1" />
                	<field name="tag_type_id" invisible="1" />
                	<field name="tag_id" invisible="1" />
                	
                	<field name="program_scheme_id" invisible="1" />
                	<field name="program_group_id" invisible="1" />
                	<field name="program_id" invisible="1" />
                	<field name="project_group_id" invisible="1" />
                	<field name="project_id" attrs="{'required': [('costcenter_id','=',False)]}"/>
                	
                    <field name="org_id" invisible="1" />
                    <field name="sector_id" invisible="1" />
                    <field name="department_id" invisible="1"/>
                    <field name="division_id" invisible="1" />
                    <field name="section_id" invisible="1" />
                    <field name="costcenter_id" attrs="{'required': [('project_id','=',False)]}"/>

                </xpath>
                <xpath expr="//form/sheet/notebook/page/field/form/sheet/group/group" position="after">
                    <group>
	                	<field name="spa_id" invisible="1"/>
	                	<field name="mission_id" invisible="1" />
	                	<field name="tag_type_id" invisible="1" />
	                	<field name="tag_id" invisible="1" />
	                	
	                	<field name="program_scheme_id" invisible="1" />
	                	<field name="program_group_id" invisible="1" />
	                	<field name="program_id" invisible="1" />
	                	<field name="project_group_id" invisible="1" />
	                	<field name="project_id" attrs="{'required': [('costcenter_id','=',False)]}"/>
	                	
	                    <field name="org_id" invisible="1" />
	                    <field name="sector_id" invisible="1" />
	                    <field name="department_id" invisible="1"/>
	                    <field name="division_id" invisible="1" />
	                    <field name="section_id" invisible="1" />
	                    <field name="costcenter_id" attrs="{'required': [('project_id','=',False)]}"/>
					</group>
                </xpath>
            </field>
        </record>
        <record id="pabi_purchase_request_line_form" model="ir.ui.view" >
            <field name="name">purchase.request.line.form</field>
            <field name="model">purchase.request.line</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='analytic_account_id']" position="after">
                	
                	<field name="spa_id" invisible="1"/>
                	<field name="mission_id" invisible="1" />
                	<field name="tag_type_id" invisible="1" />
                	<field name="tag_id" invisible="1" />
                	
                	<field name="program_scheme_id" invisible="1" />
                	<field name="program_group_id" invisible="1" />
                	<field name="program_id" invisible="1" />
                	<field name="project_group_id" invisible="1" />
                	<field name="project_id" attrs="{'required': [('costcenter_id','=',False)]}"/>
                	
                    <field name="org_id" invisible="1" />
                    <field name="sector_id" invisible="1" />
                    <field name="department_id" invisible="1"/>
                    <field name="division_id" invisible="1" />
                    <field name="section_id" invisible="1" />
                    <field name="costcenter_id" attrs="{'required': [('project_id','=',False)]}"/>

                </xpath>
            </field>
        </record>
    </data>
</openerp>

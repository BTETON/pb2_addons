<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="account_budget_view_form" model="ir.ui.view" >
            <field name="name">account.budget.view.form</field>
            <field name="model">account.budget</field>
            <field name="inherit_id" ref="account_budget_activity.account_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group/group//field[@name='validating_user_id']" position="after">
                	<field name="chart_view" required="1"/>
					<!-- Project Based -->
                	<field name="functional_area_id" attrs="{'invisible': [('chart_view','!=','project_base')], 'required': [('chart_view','=','project_base')]}"/>
                	<field name="program_group_id" attrs="{'invisible': [('chart_view','!=','project_base')], 'required': [('chart_view','=','project_base')]}"/>
					<!-- Unit Based -->
                	<field name="org_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>             	
					<field name="sector_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>      	
					<field name="department_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>     	
					<field name="division_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>
					<field name="section_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>    
					<field name="costcenter_id" attrs="{'invisible': [('chart_view','!=','unit_base')], 'required': [('chart_view','=','unit_base')]}"/>
            	</xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='budget_line_ids']" position="replace">
	                <!-- Unit Based -->
                	<field name="budget_line_unit_base" colspan="4" nolabel="1"
                			attrs="{'readonly':[('state','!=','draft')], 'invisible':[('chart_view','!=','unit_base')]}">
	                    <tree string="Budget Lines">
	                    	<field name="activity_group_id" />
	                    	<field name="activity_id" />
	                        <field name="period_id" />
	                        <field name="date_from" invisible="0"/>
	                        <field name="date_to" invisible="0"/>
	                        <field name="planned_amount" sum="Planned Amount"/>
	                    </tree>
	                    <form string="Budget Lines">
	                    	<group>
								<group string="Unit Based">
				                    <field name="org_id" />
				                    <field name="sector_id" />
				                    <field name="department_id" />
				                    <field name="division_id" />
				                    <field name="section_id" />
				                    <field name="costcenter_id" />
								</group>
								<group string="Activity" >
				                    <field name="activity_group_id" />
				                    <field name="activity_id" />
								</group>
								<group string="Extra Dimension">
				                    <field name="nstda_course_id" />
								</group>
								<group string="Tag">
			                    	<field name="spa_id" />
			                    	<field name="mission_id" />
			                    	<field name="tag_type_id" />
			                    	<field name="tag_id" />
								</group>
	                    	</group>
	                        <group>
	                            <group>
	                                <field name="planned_amount"/>
	                            </group>
	                            <group>
	                                <label for="date_from" string="Duration"/>
	                                <div>
	                                	<field name="period_id" />
	                                    <field name="date_from" class="oe_inline" invisible="0"/> - 
	                                    <field name="date_to" class="oe_inline" invisible="0"/>
	                                </div>
	                                <field name="company_id" widget="selection" groups="base.group_multi_company"/>
	                            </group>
	                        </group>
	                    </form>
	                </field>           
	                <!-- Project Based -->
                	<field name="budget_line_project_base" colspan="4" nolabel="1"
                			attrs="{'readonly':[('state','!=','draft')], 'invisible':[('chart_view','!=','project_base')]}">
	                    <tree string="Budget Lines">
	                    	<field name="program_id" />
	                    	<field name="project_group_id" />
	                    	<field name="project_id" />
	                    	<field name="activity_group_id" />
	                    	<field name="activity_id" />
	                        <field name="period_id" />
	                        <field name="date_from" invisible="0"/>
	                        <field name="date_to" invisible="0"/>
	                        <field name="planned_amount" sum="Planned Amount"/>
	                    </tree>
	                    <form string="Budget Lines">
	                    	<group>
								<group string="Project Based">
			                    	<field name="functional_area_id" />
			                    	<field name="program_group_id" />
			                    	<field name="program_id" />
			                    	<field name="project_group_id" />
			                    	<field name="project_id" />
								</group>
								<group string="Activity" >
				                    <field name="activity_group_id" />
				                    <field name="activity_id" />
								</group>
								<group string="Extra Dimension">
				                    <field name="nstda_course_id" />
								</group>
								<group string="Tag">
			                    	<field name="spa_id" />
			                    	<field name="mission_id" />
			                    	<field name="org_id" />
			                    	<field name="tag_type_id" />
			                    	<field name="tag_id" />
								</group>
	                    	</group>
	                        <group>
	                            <group>
	                                <field name="planned_amount"/>
	                            </group>
	                            <group>
	                                <label for="date_from" string="Duration"/>
	                                <div>
	                                	<field name="period_id" />
	                                    <field name="date_from" class="oe_inline" invisible="0"/> - 
	                                    <field name="date_to" class="oe_inline" invisible="0"/>
	                                </div>
	                                <field name="company_id" widget="selection" groups="base.group_multi_company"/>
	                            </group>
	                        </group>
	                    </form>
	                </field>             
            	</xpath>
        	</field>
        </record>
        
     </data>
</openerp>

<?xml version="1.0" ?>
<openerp>
    <data>

    	# SPA
        <record id="view_res_spa_form" model="ir.ui.view" >
            <field name="name">view.res.spa.form</field>
            <field name="model">res.spa</field>
            <field name="inherit_id" ref="pabi_base.view_res_spa_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[last()]" position="after">
                    <notebook>
	                    <page string="Budget Monitor">
		                    <field name="monitor_ids">
				                <tree string="Monitor" editable="bottom">
		                    		<field name="spa_id" invisible="1"/>
		                    		<field name="fiscalyear_id" />
		                    		<field name="amount_plan" />
		                    		<field name="amount_actual" />
		                    		<field name="amount_commit" />
		                    		<field name="amount_balance" />
				                </tree>
		                	</field>
	                	</page>
                	</notebook>
                </xpath>

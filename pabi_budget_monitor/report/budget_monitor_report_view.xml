<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

	<record id="view_budget_monitor_report_graph" model="ir.ui.view">
		<field name="name">budget.monitor.report.graph</field>
        <field name="model">budget.monitor.report</field>
        <field name="inherit_id" ref="account_budget_activity.view_budget_monitor_report_graph"/>
        <field name="arch" type="xml">
        	<xpath expr="//graph" position="replace">
	             <graph string="Budget Monitor" type="pivot">
	                 <field name="org_id" type="row"/>
	                 <field name="fiscalyear_id" type="col"/>
	                 <field name="planned_amount" type="measure"/>
	                 <field name="amount_pr_commit" type="measure"/>
	                 <field name="amount_po_commit" type="measure"/>
	                 <field name="amount_actual" type="measure"/>
	                 <field name="amount_balance" type="measure"/>
	             </graph>
         	</xpath>
         </field>
    </record>

	<record id="view_budget_monitor_report_tree" model="ir.ui.view">
		<field name="name">budget.monitor.report.graph</field>
        <field name="model">budget.monitor.report</field>
        <field name="inherit_id" ref="account_budget_activity.view_budget_monitor_report_tree"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='amount_balance']" position="after">

				<field name="spa_id"/>
				<field name="mission_id" />
				<field name="tag_type_id" />
				<field name="tag_id" />
				
				<field name="functional_area_id" />
				<field name="program_group_id" />
				<field name="program_id" />
				<field name="project_group_id" />
				<field name="project_id"/>
				
				<field name="org_id" />
				<field name="sector_id" />
				<field name="subsector_id"/>
				<field name="division_id" />
				<field name="section_id" />
				<field name="costcenter_id"/>
				<field name="taxbranch_id" />
				
				<field name="invest_asset_id" />
				
				<field name="invest_construction_id" />
				<field name="invest_construction_phase_id" />
				    
				<field name="personnel_costcenter_id" />
				            
				<field name="cost_control_type_id"/>
				<field name="cost_control_id" />   
                    
         	</xpath>
         </field>
    </record>

</data>
</openerp>

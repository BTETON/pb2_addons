<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <!-- Configure for each POS Machine -->

        <record id="pos_order" model="sale.workflow.process">
            <field name="name">POS</field>
            <field name="picking_policy">one</field>
            <field name="order_policy">manual</field>
            <field name="invoice_quantity">order</field>
            <field name="validate_order" eval="1"/>
            <field name="create_invoice_on">on_order_confirm</field>
            <field name="validate_invoice" eval="1" />
            <field name="invoice_date_is_order_date" eval="1" />
            <field name="validate_picking" eval="1" />
            <field name="property_journal_id" eval="1"/>  <!-- Sales -->
            <field name="warning"></field>
            <!-- NSTDA Specific -->
            <field name="run_now" eval="1"/>
            <field name="operating_unit_id" eval="ref('base.res_ou_1')"/>
            <field name="warehouse_id" eval="ref('pabi_pos.stock_warehouse_bookshop')"/>
            <field name="taxbranch_id" eval="ref('base.res_taxbranch_4')"/>
            <field name="section_id" eval="ref('base.res_section_1')"/>
        </record>

    </data>
</openerp>

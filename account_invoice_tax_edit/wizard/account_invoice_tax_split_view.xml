<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>
	
		<record id="view_tax_split_wizard" model="ir.ui.view">
		    <field name="name">view.tax.split.wizard</field>
		    <field name="model">account.invoice.tax.split.wizard</field>
		    <field name="arch" type="xml">
		        <form string="Split Taxes">
		            <p class="oe_grey">
		           		VAT can be split into multiple lines.
		           	</p>
		            <field name="tax_line_ids" >
		            	<tree editable="bottom" create="0" delete="0">
		            		<field name="tax_line_id" />
		            		<field name="number_split" />
		            	</tree>
		            </field>
		            <footer>
		                <button name="split_account_invoice_tax"
		                        type="object"
		                        string="Split"
		                        class="oe_highlight"/>
		                or
		                <button special="cancel"
		                        class="oe_link"
		                        string="Cancel"/>
		            </footer>
		        </form>
		    </field>
		</record>
		
		<record id="action_tax_split" model="ir.actions.act_window">
		    <field name="name">Split Taxes</field>
		    <field name="res_model">account.invoice.tax.split.wizard</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form</field>
		    <field name="context">{}</field>
		    <field name="target">new</field>
		</record>
	
	</data>
</openerp>
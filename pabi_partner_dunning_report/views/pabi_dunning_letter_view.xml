<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>

		<record model="ir.ui.view" id="view_pabi_dunning_letter_tree">
			<field name="name">view.pabi.dunning.letter.tree</field>
			<field name="model">pabi.dunning.letter</field>
			<field name="arch" type="xml">
				<tree string="Partner Dunning Letter">
					<field name="partner_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_pabi_dunning_letter_form">
			<field name="name">view.pabi.dunning.letter.form</field>
			<field name="model">pabi.dunning.letter</field>
			<field name="arch" type="xml">
				<form string="Partner Dunning Report">
					<sheet>
						<div class="oe_title">
							<h1>
								<label string="Dunning Letter" />
								<field name="number" class="oe_inline" />
							</h1>
						</div>
						<group>
							<group>
								<field name="letter_type"/>
								<field name="partner_id"/>
							</group>
							<group>
								<field name="date_letter" />
								<field name="date_run"/>
								<field name="to_whom_title"/>
							</group>
						</group>
						<group string="Due Invices">
							<field name="line_ids" nolabel="1">
								<tree editable="bottom">
									<field name="move_line_id"/>
									<field name="date_invoice"/>
									<field name="amount_residual"/>
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_pabi_dunning_letter_search" model="ir.ui.view">
			<field name="name">view.pabi.dunning.letter.search</field>
			<field name="model">pabi.dunning.letter</field>
			<field name="arch" type="xml">
				<search string="Partner Dunning Report">
					<group expand="1" string="Group By">
						<filter string="Partner" name="groupby_partner" context="{'group_by':'partner_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="action_pabi_dunning_letter" model="ir.actions.act_window">
			<field name="name">Partner Dunning Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pabi.dunning.letter</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem action="action_pabi_dunning_letter" id="menu_pabi_dunning_letter" sequence="111" name="Dunning Letters" parent="account.menu_finance_reports"/>

	</data>
</openerp>

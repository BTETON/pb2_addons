<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_search_partner_dunning_report_wizard" model="ir.ui.view">
            <field name="name">view.search.partner.dunning.report.wizard</field>
            <field name="model">search.partner.dunning.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Partner Dunning Report">
                    <group>
                        <group>
                            <field name="search_options"/>
                        </group>
                        <group></group>
                    </group>
                    <group>
                        <p>
                            <strong>Remarks</strong> <br/>
                            - Search for "Today Dunning Report" will shows records that need to create dunning letter as of today. <br/>
                            - Search for "Printed Report" will show records that was created as letter (1, 2, 3)
                        </p>
                    </group>
                    <footer>
                        <button name="action_search_partner_dunning_report" type="object" string="Search" class="oe_highlight"/>
                        or
                        <button special="cancel" class="oe_link" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window
          id="action_search_partner_dunning_report_wizard"
          name="Partner Dunning Report"
          src_model="pabi.partner.dunning.report"
          res_model="search.partner.dunning.report.wizard"
          view_type="form"
          view_mode="form"
          key2="client_action_multi"
          target="new"
          />
    </data>
</openerp>
